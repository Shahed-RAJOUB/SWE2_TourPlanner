<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.openjfx.views.LogsViewController">
<SplitPane dividerPositions="0.5" orientation="VERTICAL" >
    <items>
        <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Route">
                    <content>
                    </content>
                </Tab>
                <Tab text="Description">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                    </content>
                </Tab>
            </tabs>
        </TabPane>
        <TabPane VBox.vgrow="ALWAYS" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Logs">
                    <content>
                        <TableView fx:id="tableLogs" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="tableDate" prefWidth="216.0" text="Date" />
                                <TableColumn fx:id="tableDuration" prefWidth="188.0" text="Duration" />
                                <TableColumn fx:id="tableDistance" prefWidth="210.0" text="Distance" />
                                <TableColumn fx:id="BurnedCalories" prefWidth="228.0" text="Burned Calories" />
                            </columns>
                        </TableView>
                    </content>
                </Tab>
                <Tab text="add">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <Label layoutX="26.0" layoutY="45.0" text="Date" />
                                <TextField fx:id="LogDate" layoutX="98.0" layoutY="42.0" />
                                <Label layoutX="26.0" layoutY="82.0" text="Duration" />
                                <TextField fx:id="LogDuration" layoutX="98.0" layoutY="78.0" />
                                <Label layoutX="26.0" layoutY="118.0" text="Distance" />
                                <TextField fx:id="LogDistance" layoutX="99.0" layoutY="114.0" />
                                <Label layoutX="26.0" layoutY="118.0" text="Tour Name" />
                                <TextField fx:id="LogTour" layoutX="99.0" layoutY="114.0" />
                                <Button fx:id="AddLog" layoutX="189.0" layoutY="164.0" mnemonicParsing="false" text="Button" onAction="#addLog" />
                            </children></AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </items>
</SplitPane>
</VBox>
